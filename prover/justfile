# ğŸš€ Atomic Swap Prover Commands

# Generate a real proof and save to binary files
generate-proof:
    @echo "ğŸ”¥ Generating real proof..."
    cd script && RUST_LOG=info cargo run --release -- --prove
    @echo "âœ… Real proof generated and saved! ğŸ‰"

# Generate a mock proof (faster for testing)
generate-mock-proof:
    @echo "âš¡ Generating mock proof..."
    cd script && SP1_PROVER=mock RUST_LOG=info cargo run --release -- --prove
    @echo "âœ… Mock proof generated and saved! ğŸš€"

# Verify the saved proof (for mock proofs)
verify-proof:
    @echo "ğŸ” Verifying saved proof..."
    cd script && SP1_PROVER=mock RUST_LOG=info cargo run --release -- --verify
    @echo "âœ… Proof verification complete! ğŸ”âœ¨"

# Verify real proof (slower but secure)
verify-real-proof:
    @echo "ğŸ” Verifying real proof..."
    cd script && RUST_LOG=info cargo run --release -- --verify
    @echo "âœ… Real proof verification complete! ğŸ”âœ¨"

# Clean up generated files
clean:
    @echo "ğŸ§¹ Cleaning up generated files..."
    cd script && rm -f proof.bin vkey.bin public_params.json
    @echo "âœ… Cleanup complete! ğŸ—‘ï¸"

# Show help
help:
    @echo "ğŸš€ Atomic Swap Prover Commands:"
    @echo "  generate-proof      - Generate real proof (slow but secure)"
    @echo "  generate-mock-proof - Generate mock proof (fast for testing)"
    @echo "  verify-proof        - Verify mock proof"
    @echo "  verify-real-proof   - Verify real proof"
    @echo "  clean               - Remove generated proof files"
    @echo "  help                - Show this help message"